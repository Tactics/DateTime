{
    "name": "tactics/datetime",
    "require": {
        "php": "~8.1",
        "nesbot/carbon": "^2.64",
        "psr/clock": "^1.0",
        "symfony/clock": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpbench/phpbench": "^1.1",
        "phpstan/phpstan": "^1.9",
        "symplify/easy-ci": "^11.1",
        "symplify/easy-coding-standard": "^11.1",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "Tactics\\DateTime\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tactics\\DateTime\\": "tests",
            "Tactics\\DateTime\\Benchmarks\\": "benchmarks"
        }
    },
    "scripts": {
        "fix-style": [
            "vendor/bin/ecs check --config ecs.php --fix"
        ],
        "check-style": [
            "vendor/bin/ecs check --config ecs.php"
        ],
        "test": [
            "vendor/bin/phpunit --testdox --coverage-clover clover.xml"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse --memory-limit=-1 --ansi"
        ]
    }
}
